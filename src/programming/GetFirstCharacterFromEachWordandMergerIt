class Main {
    public static void main(String[] args) {
       String s="this is easy java program";
       String sp[]=s.split(" ");
       StringBuffer sb=new StringBuffer();
      for(String word:sp)
      {
          sb.append(Character.toUpperCase(word.charAt(0)));
      }
      System.out.println(sb);// TIEJP
    }
}
