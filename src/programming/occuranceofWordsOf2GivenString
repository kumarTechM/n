// Online Java Compiler
// Use this editor to write, compile and run your Java code online

class Main {
    public static void main(String[] args) 
    {
      String s = "Automation testing is good way of testing";
        String s1 = "testing";
    String []sp=s.split(" ");
     int count=0;
    for(int i=0;i<sp.length;i++)
    {
       
        if(sp[i].equals(s1))
        {
            count++;
        }
    }
    System.out.println(count);//2
    } 
}
// alternate way 
// Online Java Compiler
// Use this editor to write, compile and run your Java code online

class Main {
    public static void main(String[] args) 
    {
      String s = "Automation testing is good way of testing";
        String s1 = "testing";
           int count=0;
            String inputlower=s.toLowerCase();
            String inputanother=s1.toLowerCase();
        String sp[]=inputlower.split(" ");
            for(String word:sp)
            {
          //  System.out.println(word);
                if(word.equals(inputanother))
                {
                    count++;
                }
            }
    System.out.println(count);//2
    } 
}
