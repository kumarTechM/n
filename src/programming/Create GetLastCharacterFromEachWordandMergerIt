class Main {
    public static void main(String[] args) {
       String s="this is easy java program";
       String sp[]=s.split(" ");
       StringBuffer sb=new StringBuffer();
      for(String word:sp)
      {
          sb.append(Character.toUpperCase(word.charAt(word.length()-1)));
      }
      System.out.println(sb);// SSYAM
    }
}
//
Requirement	Code
First letter	word.charAt(0)
Last letter	word.charAt(word.length()-1)
Nth letter	word.charAt(n)
// if you want char whos length gretaer or lesser than 2 or 3
